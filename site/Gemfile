# frozen_string_literal: true

source "https://rubygems.org"

# Jekyll version compatible with GitHub Pages
gem "jekyll", "~> 4.3"

# Pin sass-embedded to reduce deprecation warning noise
# The just-the-docs theme uses @import which is deprecated in Dart Sass 3.0
gem "sass-embedded", "~> 1.77.0"

# Required for Ruby 3.5+ (removed from default gems)
gem "erb"
gem "logger"

# Just the Docs theme for documentation
gem "just-the-docs", "~> 0.8"

# Required plugins
group :jekyll_plugins do
  gem "jekyll-seo-tag"
  gem "jekyll-sitemap"
  gem "jekyll-remote-theme"
end

# Windows and JRuby compatibility
platforms :mingw, :x64_mingw, :mswin, :jruby do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
end

# Performance booster for watching directories on Windows
gem "wdm", "~> 0.1", :platforms => [:mingw, :x64_mingw, :mswin]

# Lock http_parser to fix JRuby issue
gem "http_parser.rb", "~> 0.6.0", :platforms => [:jruby]

# webrick is needed for Ruby 3.0+
gem "webrick", "~> 1.8"
